<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/putih"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Beranda">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <android.support.v7.widget.CardView
     android:layout_marginTop="4dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
 <LinearLayout
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
     <TextView
         android:text="Promo Spesial"
         android:textSize="19sp"
         android:layout_margin="5dp"
         android:layout_marginLeft="10dp"
         android:padding="4dp"
         android:background="@color/abu"
         android:textColor="@color/hitam"
         android:fontFamily="@font/antic"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
     <com.facebook.shimmer.ShimmerFrameLayout
         android:id="@+id/load_promo"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <include
            layout="@layout/promo_load"/>
     </com.facebook.shimmer.ShimmerFrameLayout>
     <android.support.v7.widget.RecyclerView
     android:id="@+id/rv_promo"
     android:layout_marginTop="4dp"
         android:layout_marginBottom="5dp"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>
 </LinearLayout>
 </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:background="@color/abu"
                android:fontFamily="@font/antic"
                android:textColor="@color/hitam"
                android:text="Kategori"
                android:textSize="19sp" />
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/load_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/kategori_load"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/rv_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Rekomendasi Produk "
                android:textSize="19sp"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:background="@color/abu"
                android:padding="4dp"
                android:fontFamily="@font/antic"
                android:textColor="@color/hitam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_rekom"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
</RelativeLayout>