<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Login">

        <LinearLayout
            android:id="@+id/head"
            android:clickable="true"
            android:background="@color/bir"
            android:gravity="center"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="Belum Jadi Member?"
            android:textSize="15sp"
            android:textColor="@color/putih"
            android:duplicateParentState="true"
            android:gravity="center"
            android:fontFamily="@font/asap"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/daftar"
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="3dp"
                android:clickable="true"
                android:fontFamily="@font/asap"
                android:text="Daftar Disini!"
                android:textColor="@color/putih"
                android:textSize="15sp" />
        </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="@string/login_title"
            android:fontFamily="@font/asap"
            android:textColor="@color/hitam"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/abu"
            android:layout_margin="3dp"
            android:layout_width="300dp"
            android:layout_height="2dp"/>
        <TextView
            android:layout_marginTop="2dp"
            android:text="Username Atau Telepon"
            android:fontFamily="@font/asap"
            android:layout_width="300dp"
            android:textColor="@color/hitam"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/username"
            android:drawableRight="@drawable/ic_mobile"
            android:background="@drawable/rounded_editext"
            android:layout_width="300dp"
            android:textSize="14sp"
            android:padding="4dp"
            android:inputType="text"
            android:layout_marginTop="4dp"
            android:hint="Masukan Username atau Telepon"
            android:layout_height="40dp" />
        <TextView
            android:text="Password"
            android:fontFamily="@font/asap"
            android:layout_width="300dp"
            android:textColor="@color/hitam"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password"
            android:background="@drawable/rounded_editext"
            android:drawableRight="@drawable/ic_lock"
            android:layout_width="300dp"
            android:textSize="14sp"
            android:padding="4dp"
            android:hint="Masukan Password"
            android:inputType="textPassword"
            android:layout_height="40dp" />
        <CheckBox
            android:id="@+id/ck"
            android:layout_marginTop="5dp"
            android:layout_width="300dp"
            android:text="Lihat Password"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="Masuk Aplikasi"
            android:textAllCaps="false"
            android:textColor="@color/putih"
            android:textSize="15sp" />
        <TextView
            android:paddingTop="10dp"
            android:layout_width="300dp"
            android:text="Social Login"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="@color/hitam"
            android:layout_height="wrap_content" />
        <View
            android:background="@color/abu"
            android:layout_margin="3dp"
            android:layout_width="300dp"
            android:layout_height="2dp"/>
        <com.google.android.gms.common.SignInButton
            android:id="@+id/btngp"
            android:layout_width="300dp"
            android:layout_height="45dp" />
        <View
            android:background="@color/abu"
            android:layout_margin="3dp"
            android:layout_width="300dp"
            android:layout_height="2dp"/>
        <Button
            android:id="@+id/breg"
            android:layout_width="300dp"
            android:layout_margin="4dp"
            android:text="Daftar akun Baru"
            android:background="@drawable/rounded_button_default"
            android:layout_height="wrap_content"/>

        <TextView

            android:id="@+id/btn_back"
            android:textColor="@color/bir"
            android:paddingTop="15dp"
            android:textStyle="bold"
            android:text="Kembali Ke Halaman Awal"
            android:textAlignment="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>